{
	"name": "workers-tracing",
	"version": "0.1.0",
	"description": "Ena",
	"author": "Daniel Walsh (@WalshyDev)",
	"license": "MIT",
	"main": "dist/workers-tracing.cjs",
	"module": "dist/workers-tracing.esm",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/workers-tracing.cjs",
			"import": "./dist/workers-tracing.esm",
			"types": "./dist/"
		}
	},
	"files": [
		"src",
		"dist/",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"workers",
		"tracing",
		"cloudflare",
		"cloudflare workers",
		"opentelemetry",
		"zipkin",
		"jaeger"
	],
	"scripts": {
		"build": "rm -rf dist && npm run build:esm && npm run build:cjs && npm run build:types",
		"build:esm": "esbuild --format=esm --platform=neutral --bundle --minify --sourcemap --outfile=dist/workers-tracing.esm src/index.ts",
		"build:cjs": "esbuild --format=cjs --platform=neutral --bundle --minify --sourcemap --outfile=dist/workers-tracing.cjs src/index.ts",
		"build:types": "tsc src/*.ts src/**/*.ts --declaration --emitDeclarationOnly --outDir dist --types @cloudflare/workers-types",
		"build:types2": "tsc -p tsconfig.emit.json",
		"record-sizes": "rm -rf dist && npm run build && gzip dist/workers-tracing.esm dist/workers-tracing.cjs && npm run build && ls -lah dist",
		"test": "vitest",
		"test:ci": "vitest run --watch false",
		"lint": "eslint --ext js,ts src test",
		"lint:fix": "eslint --fix --ext js,ts src test",
		"changeset": "npx changeset"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.0",
		"@cloudflare/workers-types": "^3.18.0",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"eslint": "^8.30.0",
		"eslint-plugin-import": "^2.26.0",
		"vitest": "^0.26.2",
		"wrangler": "^2.6.2"
	}
}
